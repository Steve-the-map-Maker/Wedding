{
  "name": "wedding-site",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "Single-page React + Vite + Tailwind wedding site with image optimization pipeline.",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx}\" --max-warnings=0",
    "format": "prettier --write .",
    "check": "npm run lint && npm run build",
    "images:optimize": "node scripts/optimize-images.mjs",
    "images:optimize:sample": "node scripts/optimize-images.mjs --limit 1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
  "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.3",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  }
}
